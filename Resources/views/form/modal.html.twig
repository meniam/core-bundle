{% block modal_form %}
<form {% block modal_form_data %}{% endblock %}>
    {% block modal_header %}
    <div class="modal-header">
        <h4 class="modal-title">{% block modal_header_title %}Предупреждение{% endblock %}</h4>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    </div>
    {% endblock %}
    {% block modal_body %}
    <div class="modal-body">
        {% block modal_body_content %}{% endblock %}
    </div>
    {% endblock %}
    {% block modal_footer %}
    <div class="modal-footer">
        {% block modal_footer_buttons %}
            <button class="btn btn-primary" data-dismiss="modal">OK</button>
        {% endblock %}
    </div>
    {% endblock %}
</form>
{% endblock %}